%% biblatex
\newcommand{\zzaddcommands}{%
  % create new type of cite commands
  \DeclareCiteCommand{\zzciteauthorcite}
  {}
  {\bibhyperref{\printnames{labelname}}}
  {\multicitedelim}
  {}
  % ACL like short cite command
  \DeclareCiteCommand{\zzshortcite}
  {}
  {\bibhyperref{\printnames{labelname} \printfield{year}}}
  {\multicitedelim}
  {}%
  \providecommand{\zzciteauthor}{\zzciteauthorcite}}

\newcommand{\zzadddefbiblatexstyle}[2][numeric]{%
  \usepackage[style=#1,citestyle=#1,backend=biber]{biblatex}
  \usepackage{csquotes}
  \addbibresource{#2}
  \zzaddcommands}

\newcommand{\zzaddbiblatexstyle}[2][numeric]{%
  \usepackage[natbib=true,maxcitenames=1,backref,style=#1,citestyle=#1,backend=biber]{biblatex}
  \usepackage{csquotes}
  \AtEveryBibitem{
    \clearfield{urlyear}
    \ifentrytype{online}{}{% Remove url except for @online
      \clearfield{url}
    }
  }
  \addbibresource{#2}
  \zzaddcommands}

\newcommand{\zzprintbibliography}[1][section]{%
  \zzsecaddtoc{#1}{References}{spec:refs}{false}%
  \printbibliography}


