\ifzenunfloat@usecaptions
  % required for specifying captions to tables and figures
  \usepackage[font=\zenunfloat@fontsize,labelfont=bf]{caption}

  \newcommand{\zufigcaption}[2]{%
    \captionof{figure}{#2}%
    \label{fig:#1}}

  \newcommand{\zutabcaption}[2]{%
    \captionof{table}{#2}%
    \label{fig:#1}}
\else
  \newcommand{\zufigcaption}[2]{}
  \newcommand{\zutabcaption}[2]{}
\fi


