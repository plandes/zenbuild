%% -- style
% ex:
% \zzfigure{\textwidth}{filename}{the caption}
% \zzfigure[t]{\textwidth}{filename}{the caption} % put at top (H=force right here)
\providecommand{\zzfigure}[4][h!]{%
\begin{figure}[#1]
\begin{center}
\includegraphics[width=#2]{#3.eps}
\end{center}
\caption{#4}
\label{fig:#3}
\end{figure}}

% same as \zzfigure but used in a two column document
\providecommand{\zzfiguretc}[3][\textwidth]{%
\begin{figure*}[h!]
\begin{center}
\includegraphics[width=#1]{#2.eps}
\end{center}
\caption{#3}
\label{fig:#2}
\end{figure*}}

% raster version with a an extension
\providecommand{\zzfigurerast}[4]{
\begin{figure}[h!]
\begin{center}
\includegraphics[width=#1]{#2.#3}
\end{center}
\caption{#4}
\label{fig:#2}
\end{figure}
\end{frame}}


% toc names
\renewcommand{\listfigurename}{Figures}



